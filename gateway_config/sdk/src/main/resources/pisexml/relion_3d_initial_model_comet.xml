            </ctrls>
        </attributes>
    </parameter>

    <parameter type="Switch">
	    <name>ctf</name>
	    <attributes>
		    <group>1</group>
		    <prompt>Do CTF correction (ctf) </prompt>
		    <format>
			    <language>perl</language>
                <code>($value) ? " --ctf" : ""</code>
		    </format>
            <vdef>
                <value>1</value>
            </vdef>
	    </attributes>
    </parameter>

    <parameter type="Switch">
	    <name>ctf_phase_flipped</name>
	    <attributes>
		    <group>1</group>
		    <prompt>Have data been phase-flipped (ctf_phase_flipped)</prompt>
		    <format>
			    <language>perl</language>
			    <code>($value) ? " --ctf_phase_flipped" : ""</code>
		    </format>
            <vdef>
